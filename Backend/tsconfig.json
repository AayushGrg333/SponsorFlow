{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "../",  
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../",  
    "paths": {
      "@shared/*": ["Shared/*"]  
    }
  },
  "include": ["src/**/*", "../Shared/**/*"],  
  "exclude": ["node_modules"]
}
